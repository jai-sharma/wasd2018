	"nodecg": {
		"compatibleRange": ">=0.9",
		"dashboardPanels": [
			{
				"name": "timer",
				"title": "Run Timer",
				"file": "timer/timer.html",
				"width": 3
			},
			{
				"name": "nowplaying",
				"title": "Now Playing",
				"file": "nowplaying/nowplaying.html",
				"width": 3
			},
			{
