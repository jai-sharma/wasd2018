				"title": "Interview Panel",
				"file": "interview/interview.html",
				"width": 4
			},
			{
				"name": "countdown",
				"title": "Break Countdown",
				"file": "countdown/countdown.html",
				"width": 3
			},
			{
				"name": "donations",
				"title": "Donations",
				"file": "donations/donations.html",
				"width": 4
			},
			{
				"name": "schedule",
				"title": "Schedule",
				"file": "schedule/schedule.html",
				"fullbleed": true
			},
			{
				"name": "host",
				"title": "Host Panel",
				"file": "host/host.html",
				"fullbleed": true
			},
			{
				"name": "edit",
				"title": "Run Edit",
				"file": "edit/edit.html",
				"width": 6,
				"dialog": true,
				"dialogButtons": [
					{
						"name": "Save Changes",
						"type": "confirm"
					},
					{
						"name": "Discard Changes",
						"type": "dismiss"
					}
