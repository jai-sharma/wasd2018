{
	"$schema": "https://json-schema.org/draft-04/schema#",

	"type": "object",
	"additionalProperties": false,
	"properties": {

		"justgiving": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"appId": {
					"type": "string",
					"default": ""
				},
				"live": {
					"type": "boolean",
					"default": false
				},
				"pageShortName": {
					"type": "string",
					"default": ""
				}
			},
			"required": ["appId", "live"]
		},

		"twitter": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"consumerKey": {
					"type": "string",
					"default": ""
				},
				"consumerSecret": {
					"type": "string",
					"default": ""
				},
				"accessToken": {
					"type": "string",
					"default": ""
				},
				"accessTokenSecret": {
					"type": "string",
					"default": ""
				},
				"hashtag": {
					"type": "string",
					"default": ""
				}
			},
			"required": [
				"consumerKey",
				"consumerSecret",
				"accessToken",
				"accessTokenSecret",
				"hashtag"
			]
		}

	},

	"required": ["justgiving", "twitter"]
}
