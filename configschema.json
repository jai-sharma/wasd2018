{
	"$schema": "https://json-schema.org/draft-04/schema#",

	"type": "object",
	"additionalProperties": false,
	"required": ["justgiving"],

	"properties": {
		"justgiving": {
			"type": "object",
			"additionalProperties": false,
			"required": ["appId", "live"],
			"properties": {
				"appId": {
					"type": "string",
					"default": ""
				},
				"live": {
					"type": "boolean",
					"default": false
				},
				"pageShortName": {
					"type": "string",
					"default": ""
				}
			}
		}
	}
}
